@model List<Player>
@Html.ActionLink("Add new player", "AddPlayer", "Player", null, new { @class = "btn btn-primary" })

@if (Model.Count > 0)
{
    <h1> Player Overview</h1>
    <div>
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Team Name</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@($"{item.FirstName} {item.LastName}")</td>
                    <td>@($"{item.Teams.Name}")</td>
                    <td class="text-right" colspan="4">
                        @Html.ActionLink("Delete", "DeletePlayer", "Player", new { id = item.Id }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Edit", "EditPlayer", "Player", new { id = item.Id }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }


        </table>
    </div>
}