@model List<Team>
@{
    ViewData["Title"] = "Team Overview";
}

Dodajte team:
@Html.ActionLink("Add", "AddTeam", "Team", null, new { @class = "btn btn-primary" })

@if (Model.Count > 0)
{
    <h1> Team Overview</h1>
    <div>
        <table class="table">
            <tr>
                <th>Name</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td class="text-right" colspan="4">
                        @Html.ActionLink("Delete", "DeleteTeam", "Team", new { id = item.Id }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("Edit", "EditTeam", "Team", new { id = item.Id }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }


        </table>
    </div>
}